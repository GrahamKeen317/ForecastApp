<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="CategoryLabel" TargetType="Label">
        <Setter Property="Foreground" Value="#555555"/>
    </Style>

    <Style x:Key="ValueLabel" TargetType="Label">
        <Setter Property="Foreground" Value="#4E7375"/>
    </Style>

    <Style x:Key="TimeLabel" TargetType="Label">
        <Setter Property="Foreground" Value="#B3BBC2"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style x:Key="CloseButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="LightSeaGreen"/>
        <Setter Property="Foreground" Value="LightSeaGreen"/>
    </Style>
</ResourceDictionary>